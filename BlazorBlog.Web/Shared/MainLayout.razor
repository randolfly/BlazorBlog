@inherits LayoutComponentBase

<div class="main-layout">
    <!-- partial:index.partial.html -->
    <Layout SideWidth="0" IsPage="true" ShowGotoTop="true" ShowCollapseBar="true"
            IsFullSide="@IsFullSide" IsFixedHeader="true" IsFixedFooter="false" ShowFooter="false"
            TabDefaultUrl="/"
            Menus="@Menus" UseTabSet="true" AdditionalAssemblies="new[] { GetType().Assembly }" class="@Theme">
        <Header>
            <span class="ms-3 flex-sm-fill d-none d-sm-block">天策</span>
            <div class="flex-fill d-sm-none">
            </div>
            <Logout ImageUrl="https://www.blazor.zone/_content/BootstrapBlazor.Shared/images/Argo.png" DisplayName="randolf" UserName="Admin">
                <LinkTemplate>
                    <a href="#"><i class="fa-solid fa-bell"></i>通知<span class="badge badge-pill badge-success"></span></a>
                    <LogoutLink/>
                </LinkTemplate>
            </Logout>
            <Widget></Widget>
        </Header>
        <Side>
            <div class="layout-banner">
                <img class="layout-logo" src="https://www.blazor.zone/_content/BootstrapBlazor.Shared/images/brand.png"/>
                <div class="layout-title">
                    <span>个人博客</span>
                </div>
            </div>
            <div class="layout-user">
                <img class="layout-avatar" src="https://www.blazor.zone/_content/BootstrapBlazor.Shared/images/Argo-C.png">
                <div class="layout-title">
                    <span>randolf</span>
                </div>
                <div class="layout-user-state"></div>
            </div>
        </Side>
        <Main>
            <CascadingValue Value="this" IsFixed="true">
                @Body
            </CascadingValue>
        </Main>
        <Footer>
            <div class="text-center flex-fill">
                <a class="page-layout-demo-footer-link" href="https://gitee.com/LongbowEnterprise/BootstrapAdmin" target="_blank">Bootstrap Admin</a>
            </div>
        </Footer>
    </Layout>
</div>